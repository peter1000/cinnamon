# Description: Cinnamon menu specifications.
# URL: http://cinnamon.linuxmint.com/
# Maintainer: https://github.com/linuxmint
# Packager: fanch at orange do fr thierryn1 at hispeed dot ch
# Depends on: glib


name=cinnamon-menus
version=2.6.0
release=1
source=()
_gitroot=https://github.com/linuxmint/cinnamon-menus.git
_gitname=cinnamon-menus

build() {
	cd $SRC
	
	if [[ -d $_gitname ]]; then
		cd $_gitname && git pull origin
	else
		git clone $_gitroot $_gitname
	fi


	rm -rf $SRC/$_gitname-build
	git clone $SRC/$_gitname $SRC/$_gitname-build
	cd $SRC/$_gitname-build
	
      ./autogen.sh --prefix=/usr \
      --sysconfdir=/etc \
      --localstatedir=/var \
      --disable-static \
      --sbindir=/usr/bin
    
    make 
	
    make DESTDIR=$PKG install
}
